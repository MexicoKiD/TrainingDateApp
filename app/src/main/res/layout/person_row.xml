<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageViewRow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/image_view_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        app:layout_constraintStart_toEndOf="@+id/imageViewRow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hobbyRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:hint="@string/hobby"
        app:layout_constraintStart_toEndOf="@+id/imageViewRow"
        app:layout_constraintTop_toBottomOf="@+id/nameRow" />
</androidx.constraintlayout.widget.ConstraintLayout>